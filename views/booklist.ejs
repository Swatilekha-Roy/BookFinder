<!-- Fetch Header -->
<%- include('partials/header') %>

<!-- Main Content -->
<div class="main-content" style="margin-top: 5%">
  <!-- Search Functionality -->
  <div class="container top-con">
    <h2>Search For a Book</h2>
    <div class="row search-j">
      <div class="col-lg-8">
        <form
          method="POST"
          action="/booklist"
          class="form-inline my-2 my-lg-0"
          style="margin-top: 10%"
        >
          <div class="form-group">
            <input
              class="form-control input-inline"
              id="searchid"
              type="text"
              aria-describedby="search-item"
              name="searchbook"
              style="width: 300px; display: inline-block"
              placeholder="Search From BookFinder Library..."
              required
            />
            <button
              class="btn btn-primary search_btn my-2 my-sm-0"
              type="submit"
              style="margin-left: 1%"
            >
              Search
            </button>
          </div>
        </form>
      </div>
    </div>

    <div class="row">
      <div
        class="col-12 col-md-3 flex-top card book-card"
        style="display: flex; min-width: 320px"
      >
        <strong><h3 style="font-weight: 800; font-size: 2.1rem"></h3></strong>
        <p style="line-height: 30px">
          Written by
          <strong style="font-weight: 800; font-size: 1.2rem"></strong>
          <br />
          Published:
          <strong style="font-weight: 800; font-size: 1.2rem"></strong>
        </p>
      </div>
    </div>
  </div>

  <!-- List of Books -->
  <div class="container" style="margin-top: 5%">
    <h2>List of Books</h2>
    <div class="row">
      <% book.forEach(function(book){ %>
      <div
        class="col-12 col-md-3 flex-top card book-card"
        style="
          display: flex;
          min-width: 320px;
          -webkit-box-shadow: 2px 5px 10px 6px <%= book.color %>;
          box-shadow: 2px 5px 10px 6px <%= book.color %>;
        "
      >
        <strong
          ><h3 style="font-weight: 800; font-size: 2.1rem">
            <%= book.title %>
          </h3></strong
        >
        <p style="line-height: 30px">
          Written by
          <strong style="font-weight: 800; font-size: 1.2rem"
            ><%= book.author %></strong
          >
          <br />
          Published:
          <strong style="font-weight: 800; font-size: 1.2rem"
            ><%= book.date %></strong
          >
        </p>
      </div>
      <% }) %>
    </div>
  </div>
</div>

<!-- Fetch Footer -->
<%- include('partials/footer') %>
