<!-- Fetch Header -->
<%- include('partials/header') %>

<!-- Main Content -->
<div class="main-content">
  <div class="container form-container">
    <h2>Add a New Book</h2>
    <form action="addbook" method="POST">
      <div class="form-group">
        <label>Title of Book</label>
        <input
          type="text"
          class="form-control"
          id="titleid"
          aria-describedby="title"
          name="title"
          placeholder="Call Me By Your Name"
        />
      </div>
      <div class="form-group">
        <label>Author of Book</label>
        <input
          type="text"
          class="form-control"
          id="authorid"
          name="author"
          placeholder="Andre Aciman"
        />
      </div>
      <div class="form-group">
        <label>Published Date</label>
        <input
          type="text"
          class="form-control"
          id="dateid"
          name="date"
          placeholder="2015"
        />
      </div>
      <button type="submit" class="btn btn-primary index_btn">Submit</button>
    </form>
  </div>
</div>

<!-- Fetch Footer -->
<%- include('partials/footer') %>
